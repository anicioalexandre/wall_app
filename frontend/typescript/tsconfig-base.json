{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "baseUrl": "../src",
    "paths": {
      "@components/*": ["../src/components/*"],
      "@services/*": ["../src/services/*"],
      "@hooks/*": ["../src/hooks/*"],
      "@utils/*": ["../src/utils/*"],
      "@redux/*": ["../src/redux/*"],
      "@jest/*": ["../jest/*"]
    }
  }
}
